<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raywenderlich.android.foodmart.ui.checkout.CheckoutActivity">

    <ImageView
        android:id="@+id/donut"
        android:layout_width="@dimen/donut_size"
        android:layout_height="wrap_content"
        android:text="@string/checkout_from_here"
        android:textSize="@dimen/empty_state_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/donut"
        android:src="@drawable/food_donut"/>

</android.support.constraint.ConstraintLayout>
